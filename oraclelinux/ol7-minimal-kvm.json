{
    "builders": [
        {
            "type": "qemu",
            "accelerator": "kvm",
            "headless": "{{ user `headless` }}",
            "qemuargs": [
                ["-m", "4096M"],
                ["-smp", "cpus=1,maxcpus=16,cores=4"]
            ],
            "disk_interface": "virtio",
            "disk_size": 32768,
            "disk_compression": false,
            "format": "qcow2",
            "net_device": "virtio-net",
            "iso_url": "{{user `iso_url`}}",
            "iso_checksum": "{{user `iso_checksum`}}",
            "iso_checksum_type": "{{user `iso_checksum_type`}}",
            "vm_name": "ol7-minimal.qcow2",
            "output_directory": "images",
            "http_directory": "http",
            "http_port_min": 10082,
            "http_port_max": 10089,
            "ssh_host_port_min": 2222,
            "ssh_host_port_max": 2229,
            "ssh_username": "{{user `ssh_username`}}",
            "ssh_password": "{{user `ssh_password`}}",
            "ssh_port": 22,
            "ssh_wait_timeout": "1200s",
            "boot_wait": "6s",
            "boot_command": [
                "<up><wait><tab><wait> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ol7-kvm-ks.cfg<enter><wait>"
            ],
            "shutdown_command": "echo '{{ user `ssh_password` }}'|sudo -S shutdown -P now"
        }
    ],

    "post-processors": [
        {
            "environment_vars": [
                "IMAGENAME={{user `oracle_name`}}-{{ user `vm_name` }}",
                "OUTPUT=../qemu/{{ user `oracle_name` }}-{{ user `vm_name` }}",
                "DEST=../image/{{ user `oracle_name` }}",
                "SPARSIFY={{ user `sparsify` }}",
                "VERSION={{ user `version` }}"
            ],
            "type": "shell-local",
            "only": [
                "qemu"
            ],
            "scripts": [
                "../post/backup-disk.sh"
            ]
        }
    ],

    "provisioners": [{
        "type": "shell",
        "execute_command": "echo '{{ user `ssh_password` }}' | {{.Vars}} sudo -E -S bash -x '{{.Path}}'",
        "scripts": [
            "scripts/cleanup.sh"
        ]
    }],

    "variables": {
        "disk_size": "65536",
        "headless": "true",
        "http_proxy": "{{env `http_proxy`}}",
        "https_proxy": "{{env `https_proxy`}}",
        "iso_checksum": "d0cc4493db10c2a49084f872083ed9ed6a09cc065064c009734712b9ef357886",
        "iso_checksum_type": "sha256",
        "iso_name": "OracleLinux-R7-U5-Server-x86_64-dvd.iso",
        "iso_path": "",
        "iso_url": "http://mirrors.kernel.org/oracle/OL7/u5/x86_64/OracleLinux-R7-U5-Server-x86_64-dvd.iso",
        "no_proxy": "{{env `no_proxy`}}",
        "sparsify": "true",
        "ssh_username": "vagrant",
        "ssh_password": "vagrant",
        "shutdown_command": "shutdown -P now"
    }
}
