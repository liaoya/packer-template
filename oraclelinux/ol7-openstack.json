{
  "builders": [
    {
      "accelerator": "kvm",
      "boot_command": [
        "<up><wait><tab><wait> text ks=http://{{.HTTPIP}}:{{.HTTPPort}}/ol7-openstack-ks.cfg<enter><wait>"
      ],
      "boot_wait": "6s",
      "disk_compression": "{{user `disk_compression`}}",
      "disk_interface": "virtio",
      "disk_size": "{{user `disk_size`}}",
      "format": "qcow2",
      "headless": "{{user `headless`}}",
      "host_port_max": 2229,
      "host_port_min": 2222,
      "http_directory": "http",
      "http_port_max": 10089,
      "http_port_min": 10082,
      "iso_checksum": "{{user `iso_checksum_type`}}:{{user `iso_checksum`}}",
      "iso_urls": [
        "{{user `iso_path`}}/{{user `iso_name`}}",
        "{{user `iso_url`}}"
      ],
      "net_device": "virtio-net",
      "output_directory": "qemu/{{user `os_dist`}}-{{user `vm_name`}}",
      "qemuargs": [
        [
          "-m",
          "{{user `memory`}}"
        ],
        [
          "-smp",
          "cpus={{user `cpus`}}"
        ]
      ],
      "shutdown_command": "",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_port": 22,
      "ssh_timeout": "1200s",
      "ssh_username": "{{user `ssh_username`}}",
      "type": "qemu",
      "vm_name": "{{user `os_dist`}}-{{user `vm_name`}}.qcow2"
    }
  ],
  "post-processors": [
    {
      "environment_vars": [
        "IMAGENAME={{user `os_dist`}}-{{user `vm_name`}}",
        "OUTPUT=qemu/{{user `os_dist`}}-{{user `vm_name`}}",
        "DEST=image/{{user `os_dist`}}",
        "SPARSIFY={{user `sparsify`}}",
        "VERSION={{user `version`}}"
      ],
      "only": [
        "qemu"
      ],
      "scripts": [
        "post/backup-disk.sh"
      ],
      "type": "shell-local"
    }
  ],
  "variables": {
    "cpus": "2",
    "custom_group": "users",
    "custom_user": "oracle",
    "disk_compression": "true",
    "disk_size": "32768",
    "headless": "true",
    "iso_checksum": "d0cc4493db10c2a49084f872083ed9ed6a09cc065064c009734712b9ef357886",
    "iso_checksum_type": "sha256",
    "iso_name": "OracleLinux-R7-U5-Server-x86_64-dvd.iso",
    "iso_path": "{{env `PACKER_CACHE_DIR`}}",
    "iso_url": "http://mirrors.kernel.org/oracle/OL7/u5/x86_64/OracleLinux-R7-U5-Server-x86_64-dvd.iso",
    "memory": "4096",
    "os_dist": "ol75",
    "shutdown_command": "shutdown -P now",
    "sparsify": "true",
    "ssh_password": "oracle",
    "ssh_username": "root",
    "version": "{{isotime \"20060102\"}}",
    "vm_name": "openstack"
  }
}

