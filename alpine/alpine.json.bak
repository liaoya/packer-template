{
  "builders": [
    {
      "type": "qemu",
      "boot_wait": "6s",
      "accelerator": "kvm",
      "format": "qcow2",
      "output_directory": "qemu/{{ user `vm_name` }}",
      "qemuargs": [
        ["-m", "{{ user `memory` }}"],
        ["-smp", "cpus={{ user `cpus` }}"]
      ],
      "vm_name": "{{ user `vm_name` }}.qcow2",
      
      "boot_command": [
        "root<enter><wait>",
        "ifconfig eth0 up && udhcpc -i eth0<enter><wait10>",
        "wget http://{{ .HTTPIP }}:{{ .HTTPPort }}/install.sh<enter><wait>",
        "dos2unix install.sh<enter>",
        "sh install.sh -d {{user `domain`}} -n {{user `nameserver`}} -p {{user `ssh_password`}} -P {{user `http_proxy`}} -r {{user `repository`}} -z {{user `timezone`}}<enter>"
      ],
      "disk_size": "{{ user `disk_size` }}",      
      "headless": "{{ user `headless` }}",
      "http_directory": "http",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_urls": [
        "{{ user `iso_path` }}/{{ user `iso_name` }}",
        "{{ user `iso_url` }}"
      ],    
      "shutdown_command": "{{user `shutdown_command`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_wait_timeout": "{{user `ssh_wait_timeout`}}"
    },

    {
      "type": "virtualbox-iso",
      "boot_wait": "30s",
      "export_opts": [
        "--vsys", "0"
      ],
      "format": "ova",      
      "guest_additions_mode": "disable",
      "guest_os_type": "Linux26_64",
      "hard_drive_interface": "sata",
      "output_directory": "virtualbox/{{ user `vm_name` }}",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--audio", "none"],
        ["modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}"],
        ["modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}"],
        ["modifyvm", "{{.Name}}", "--nictype1", "virtio"],
        ["modifyvm", "{{.Name}}", "--usb", "on", "--usbehci", "on"]
      ],
      "vm_name": "{{ user `vm_name` }}",

      "boot_command": [
        "root<enter><wait>",
        "ifconfig eth0 up && udhcpc -i eth0<enter><wait10>",
        "wget http://{{ .HTTPIP }}:{{ .HTTPPort }}/install.sh<enter><wait>",
        "dos2unix install.sh<enter>",
        "sh install.sh -d {{user `domain`}} -n {{user `nameserver`}} -p {{user `ssh_password`}} -P {{user `http_proxy`}} -r {{user `repository`}} -z {{user `timezone`}}<enter>"
      ],
      "disk_size": "{{ user `disk_size` }}",    
      "headless": "{{ user `headless` }}",
      "http_directory": "http",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_urls": [
        "{{ user `iso_path` }}/{{ user `iso_name` }}",
        "{{ user `iso_url` }}"
      ],
      "shutdown_command": "{{user `shutdown_command`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_wait_timeout": "{{user `ssh_wait_timeout`}}"
    }
  ],

  "provisioners": [
    {
      "environment_vars": [
        "HTTP_PROXY={{user `http_proxy`}}",
        "HTTPS_PROXY={{user `https_proxy`}}",
        "NO_PROXY={{user `no_proxy`}}",        
        "http_proxy={{user `http_proxy`}}",
        "https_proxy={{user `https_proxy`}}",
        "no_proxy={{user `no_proxy`}}"
      ],
      "type": "shell",
      "scripts": [
        "scripts/sshd.sh",
        "scripts/vagrant.sh",
        "scripts/sudoers.sh",
        "scripts/apk.sh",
        "scripts/cleanup.sh",
        "scripts/minimize.sh"
      ],
      "execute_command": "{{.Vars}} /bin/sh '{{.Path}}'"
    }
  ],

  "post-processors": [
    {
      "environment_vars": ["IMAGENAME={{user `vm_name`}}", "OUTPUT=qemu/{{ user `vm_name` }}", "DEST=image/{{ user `vm_name` }}"],
      "type": "shell-local",
      "only": ["qemu"],
      "inline": [
        "qemu-img amend -f qcow2 -o compat=0.10 $OUTPUT/$IMAGENAME.qcow2",
        "mkdir -p $DEST",
        "export LIBGUESTFS_BACKEND=direct",
        "[[ $(command -v virt-sparsify) ]] && virt-sparsify $OUTPUT/$IMAGENAME.qcow2 $DEST/$IMAGENAME.qcow2",
        "[[ -f $DEST/$IMAGENAME.qcow2 ]] && mv -f $DEST/$IMAGENAME.qcow2 $OUTPUT/$IMAGENAME.qcow2",
        "[[ $(command -v pxz) ]] && pxz -c $OUTPUT/$IMAGENAME.qcow2 > $DEST/$IMAGENAME-{{user `version`}}.qcow2.xz",
        "[[ -f $DEST/$IMAGENAME-{{user `version`}}.qcow2.xz ]] || xz -c $OUTPUT/$IMAGENAME.qcow2 > $DEST/$IMAGENAME-{{user `version`}}.qcow2.xz"
      ]
    },

    {
      "environment_vars": ["IMAGENAME={{user `vm_name`}}", "OUTPUT=virtualbox/{{ user `vm_name` }}", "DEST=image/{{ user `vm_name` }}"],
      "type": "shell-local",
      "only": ["virtualbox-iso"],
      "inline": [
        "mkdir -p $DEST",
        "cp $OUTPUT/$IMAGENAME.ova $DEST/$IMAGENAME-virtualbox-{{user `version`}}.ova"
      ]
    },

    {
      "keep_input_artifact": false,
      "output": "box/{{user `vm_name`}}/{{user `vm_name`}}-{{.Provider}}-{{user `version`}}.box",
      "type": "vagrant",
      "vagrantfile_template": "{{ user `vagrantfile_template` }}"
    }
  ],

  "variables": {
    "cpus": "1",
    "disk_size": "8192",
    "domain": "local",
    "http_proxy": "{{env `http_proxy`}}",
    "https_proxy": "{{env `https_proxy`}}",
    "headless": "true",
    "iso_name": "",
    "iso_path": "",
    "iso_url": "",
    "iso_checksum": "",
    "iso_checksum_type": "sha256",
    "memory": "256",
    "nameserver": "",
    "no_proxy": "{{env `no_proxy`}}",

    "repository": "-1",
    "shutdown_command": "/sbin/poweroff",
    "ssh_username": "root",
    "ssh_password": "vagrant",
    "ssh_wait_timeout": "10m",
    "timezone": "Asia/Shanghai",
    "vagrantfile_template": "",

    "vm_name": "alpine"
  }
}