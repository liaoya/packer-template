{
    "_comment": "Build with `packer build ubuntu.json`",
    "builders": [
        {
            "type": "qemu",
            "accelerator": "kvm",
            "boot_wait": "6s",
            "disk_image": "true",
            "format": "qcow2",
            "output_directory": "../qemu/{{ user `vm_name` }}",
            "qemuargs": [
                [
                    "-m",
                    "{{ user `memory` }}"
                ],
                [
                    "-smp",
                    "cpus={{ user `cpus` }}"
                ],
                [
                    "-cdrom",
                    "../seed/seed.iso"
                ]
            ],
            "vm_name": "{{ user `vm_name` }}.qcow2",
            "boot_command": [
                "<enter>"
            ],
            "disk_size": "{{ user `disk_size` }}",
            "headless": "{{ user `headless` }}",
            "iso_checksum": "{{ user `iso_checksum` }}",
            "iso_checksum_type": "{{ user `iso_checksum_type` }}",
            "iso_urls": [
                "{{ user `iso_path` }}/{{ user `iso_name` }}",
                "{{ user `iso_url` }}"
            ],
            "shutdown_command": "echo '{{ user `ssh_password` }}'|sudo -S shutdown -P now",
            "ssh_password": "{{ user `ssh_password` }}",
            "ssh_username": "{{ user `ssh_username` }}",
            "ssh_timeout": "{{user `ssh_timeout`}}"
        }
    ],

    "provisioners": [
        {
            "execute_command": "echo '{{ user `ssh_password` }}' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
            "scripts": [
                "../custom/disable-cloud-init.sh",
                "../custom/motd.sh",
                "../custom/centos/cleanup.sh"
            ],
            "type": "shell"
        }
    ],

    "post-processors": [
        {
            "environment_vars": [
                "IMAGENAME={{user `vm_name`}}",
                "OUTPUT=../qemu/{{ user `vm_name` }}"
            ],
            "type": "shell-local",
            "only": [
                "qemu"
            ],
            "inline": [
                "qemu-img amend -f qcow2 -o compat=0.10 $OUTPUT/$IMAGENAME.qcow2"
            ]
        }
    ],
    
    "variables": {
        "cpus": "1",
        "disk_size": "16384",
        "headless": "true",
        "install_vagrant_key": "true",
        "iso_checksum": "4b68e18390cf01a4db94cb1ef31ba8bad76a3887c5c7b29a66f0fa36447de866",
        "iso_checksum_type": "sha256",
        "iso_name": "CentOS-7-x86_64-GenericCloud-1710.qcow2",
        "iso_path": "",
        "iso_url": "https://cloud.centos.org/centos/7/images/CentOS-7-x86_64-GenericCloud-1710.qcow2",
        "memory": "1024",
        "ssh_password": "vagrant",
        "ssh_username": "vagrant",
        "ssh_timeout": "15m",
        "vm_name": "centos7"
    }
}
