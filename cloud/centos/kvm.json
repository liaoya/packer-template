{
    "_comment": "Build with `packer build ubuntu.json`",
    "builders": [
        {
            "type": "qemu",
            "accelerator": "kvm",
            "boot_wait": "6s",
            "disk_image": "true",
            "format": "qcow2",
            "output_directory": "../qemu/{{user `centos_name`}}-{{ user `vm_name` }}",
            "qemuargs": [
                [
                    "-m",
                    "{{ user `memory` }}"
                ],
                [
                    "-smp",
                    "cpus={{ user `cpus` }}"
                ],
                [
                    "-cdrom",
                    "../seed/seed.iso"
                ]
            ],
            "vm_name": "{{user `centos_name`}}-{{ user `vm_name` }}.qcow2",
            "boot_command": [
                "<enter>"
            ],
            "disk_size": "{{ user `disk_size` }}",
            "headless": "{{ user `headless` }}",
            "iso_checksum": "{{ user `iso_checksum` }}",
            "iso_checksum_type": "{{ user `iso_checksum_type` }}",
            "iso_urls": [
                "{{ user `iso_path` }}/{{ user `iso_name` }}",
                "{{ user `iso_url` }}"
            ],
            "shutdown_command": "echo '{{ user `ssh_password` }}'|sudo -S shutdown -P now",
            "ssh_password": "{{ user `ssh_password` }}",
            "ssh_username": "{{ user `ssh_username` }}",
            "ssh_timeout": "{{user `ssh_timeout`}}"
        }
    ],

    "provisioners": [
        {
            "type": "file",
            "source": "build/output",
            "destination": "/tmp"
        },

        {
            "type": "file",
            "source": "../cmdlet",
            "destination": "/tmp"
        },

        {
            "type": "shell",
            "inline": [
                "chmod a+x /tmp/cmdlet/*.sh",
                "sudo cp -pr /tmp/cmdlet/*.sh /usr/local/bin"
            ]
        },

        {
            "environment_vars": [
                "SSH_USERNAME={{user `ssh_username`}}",
                "SSH_PASSWORD={{user `ssh_password`}}",
                "VM_NAME={{user `vm_name`}}",
                "YUM_MIRROR_SERVER={{user `yum_mirror_server`}}",
                "YUM_MIRROR_EPEL_PATH={{user `yum_mirror_epel_path`}}",
                "YUM_MIRROR_PATH={{user `yum_mirror_path`}}",
                "YUM_PROXY={{user `yum_proxy`}}",
                "http_proxy={{user `http_proxy`}}",
                "https_proxy={{user `https_proxy`}}",
                "ftp_proxy={{user `ftp_proxy`}}",
                "no_proxy={{user `no_proxy`}}",
                "rsync_proxy={{user `rsync_proxy`}}"
            ],            
            "execute_command": "echo '{{ user `ssh_password` }}' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
            "scripts": [
                "../custom/disable-cloud-init.sh",
                "../custom/install-vagrant-key.sh",
                "../custom/clean-proxy.sh",
                "../custom/setup-proxy.sh",
                "../custom/setup-repos.sh",
                "../custom/centos/setup-openstack-repo.sh",
                "../custom/centos/setup-libvirt-repo.sh",
                "../custom/setup-repos.sh",
                "../custom/centos/setup-common.sh",
                "../custom/centos/kvm.sh",
                "../custom/motd.sh",
                "../custom/clean-proxy.sh",
                "../custom/centos/cleanup.sh"
            ],
            "type": "shell"
        }
    ],

    "post-processors": [
        {
            "environment_vars": [
                "IMAGENAME={{user `centos_name`}}-{{user `vm_name`}}",
                "OUTPUT=../qemu/{{user `centos_name`}}-{{ user `vm_name` }}",
                "DEST=../image/{{ user `centos_name` }}",
                "SPARSIFY={{ user `sparsify` }}",
                "VERSION={{ user `version` }}"
            ],
            "type": "shell-local",
            "only": [
                "qemu"
            ],
            "scripts": [
                "../post/backup-disk.sh"
            ]
        }
    ],
    
    "variables": {
        "centos_name": "",
        "cpus": "1",
        "disk_size": "32768",
        "ftp_proxy": "{{env `ftp_proxy`}}",
        "headless": "true",
        "http_proxy": "{{env `http_proxy`}}",
        "https_proxy": "{{env `https_proxy`}}",
        "install_vagrant_key": "true",
        "iso_checksum": "",
        "iso_checksum_type": "sha256",
        "iso_name": "",
        "iso_path": "",
        "iso_url": "",
        "memory": "2048",
        "no_proxy": "{{env `no_proxy`}}",
        "rsync_proxy": "{{env `rsync_proxy`}}",
        "sparsify": "true",
        "ssh_password": "vagrant",
        "ssh_username": "vagrant",
        "ssh_timeout": "15m",
        "version": "{{isotime \"20060102\"}}",
        "vm_name": "kvm",
        "yum_mirror_server": "{{env `yum_mirror_server`}}",
        "yum_mirror_epel_path": "{{env `yum_mirror_epel_path`}}",
        "yum_mirror_path": "{{env `yum_mirror_path`}}",
        "yum_proxy": "{{env `yum_proxy`}}"
    }
}
