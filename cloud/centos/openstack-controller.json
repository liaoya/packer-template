{
    "_comment": "Build with `packer build ubuntu.json`",
    "builders": [
        {
            "type": "qemu",
            "accelerator": "kvm",
            "boot_wait": "6s",
            "disk_image": "true",
            "format": "qcow2",
            "output_directory": "../qemu/{{ user `vm_name` }}",
            "qemuargs": [
                [
                    "-m",
                    "{{ user `memory` }}"
                ],
                [
                    "-smp",
                    "cpus={{ user `cpus` }}"
                ],
                [
                    "-cdrom",
                    "../seed/seed.iso"
                ]
            ],
            "vm_name": "{{ user `vm_name` }}.qcow2",
            "boot_command": [
                "<enter>"
            ],
            "disk_size": "{{ user `disk_size` }}",
            "headless": "{{ user `headless` }}",
            "iso_checksum": "{{ user `iso_checksum` }}",
            "iso_checksum_type": "{{ user `iso_checksum_type` }}",
            "iso_urls": [
                "{{ user `iso_path` }}/{{ user `iso_name` }}",
                "{{ user `iso_url` }}"
            ],
            "shutdown_command": "echo '{{ user `ssh_password` }}'|sudo -S shutdown -P now",
            "ssh_password": "{{ user `ssh_password` }}",
            "ssh_username": "{{ user `ssh_username` }}",
            "ssh_wait_timeout": "{{user `ssh_wait_timeout`}}"
        }
    ],

    "provisioners": [
        {
            "environment_vars": [
                "SSH_USERNAME={{user `ssh_username`}}",
                "SSH_PASSWORD={{user `ssh_password`}}",
                "VM_NAME={{user `vm_name`}}",
                "YUM_MIRROR_SERVER={{user `yum_mirror_server`}}",
                "YUM_MIRROR_EPEL_PATH={{user `yum_mirror_epel_path`}}",
                "YUM_MIRROR_PATH={{user `yum_mirror_path`}}",
                "http_proxy={{user `http_proxy`}}",
                "https_proxy={{user `https_proxy`}}",
                "ftp_proxy={{user `ftp_proxy`}}",
                "no_proxy={{user `no_proxy`}}",
                "rsync_proxy={{user `rsync_proxy`}}"
            ],
            "execute_command": "echo '{{ user `ssh_password` }}' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
            "scripts": [
                "../custom/disable-cloud-init.sh",
                "../custom/clean-proxy.sh",
                "../custom/setup-proxy.sh",
                "../custom/setup-repos.sh",
                "../custom/centos/setup-openstack-repo.sh",
                "../custom/setup-repos.sh",
                "../custom/motd.sh",
                "../custom/centos/cleanup.sh"
            ],
            "type": "shell"
        }
    ],

    "post-processors": [
        {
            "environment_vars": [
                "IMAGENAME={{user `vm_name`}}",
                "OUTPUT=../qemu/{{ user `vm_name` }}",
                "DEST=image/{{ user `vm_name` }}"
            ],
            "type": "shell-local",
            "only": [
                "qemu"
            ],
            "inline": [
                "[ -d $DEST ] || mkdir -p $DEST",
                "qemu-img convert -c -O qcow2 -o compat=0.10 $OUTPUT/$IMAGENAME.qcow2 $DEST/$IMAGENAME-{{user `version`}}.qcow2c"
            ]
        }
    ],
    
    "variables": {
        "cpus": "1",
        "disk_size": "32768",
        "ftp_proxy": "{{env `ftp_proxy`}}",
        "headless": "true",
        "http_proxy": "{{env `http_proxy`}}",
        "https_proxy": "{{env `https_proxy`}}",        
        "install_vagrant_key": "true",
        "iso_checksum": "4b68e18390cf01a4db94cb1ef31ba8bad76a3887c5c7b29a66f0fa36447de866",
        "iso_checksum_type": "sha256",
        "iso_name": "CentOS-7-x86_64-GenericCloud-1710.qcow2",
        "iso_path": "",
        "iso_url": "https://cloud.centos.org/centos/7/images/CentOS-7-x86_64-GenericCloud-1710.qcow2",
        "memory": "1024",
        "no_proxy": "{{env `no_proxy`}}",
        "rsync_proxy": "{{env `rsync_proxy`}}",        
        "ssh_password": "vagrant",
        "ssh_username": "vagrant",
        "ssh_wait_timeout": "15m",
        "vm_name": "controller",
        "yum_mirror_server": "",
        "yum_mirror_epel_path": "",
        "yum_mirror_path": ""
    }
}
