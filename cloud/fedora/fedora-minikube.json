{
    "_comment": "Build with `packer build ubuntu.json`",
    "builders": [
        {
            "type": "qemu",
            "accelerator": "kvm",
            "boot_wait": "6s",
            "disk_image": "true",
            "format": "qcow2",
            "output_directory": "../qemu/{{ user `fedora_name` }}-{{ user `vm_name` }}",
            "qemuargs": [
                [
                    "-m",
                    "{{ user `memory` }}"
                ],
                [
                    "-smp",
                    "cpus={{ user `cpus` }}"
                ],
                [
                    "-cdrom",
                    "../seed/seed.iso"
                ]
            ],
            "vm_name": "{{ user `fedora_name` }}-{{ user `vm_name` }}.qcow2",
            "boot_command": [
                "<enter>"
            ],
            "disk_size": "{{ user `disk_size` }}",
            "headless": "{{ user `headless` }}",
            "iso_checksum": "{{ user `iso_checksum` }}",
            "iso_checksum_type": "{{ user `iso_checksum_type` }}",
            "iso_urls": [
                "{{ user `iso_path` }}/{{ user `iso_name` }}",
                "{{ user `iso_url` }}"
            ],
            "shutdown_command": "echo '{{ user `ssh_password` }}'|sudo -S shutdown -P now",
            "ssh_password": "{{ user `ssh_password` }}",
            "ssh_username": "{{ user `ssh_username` }}",
            "ssh_timeout": "{{user `ssh_timeout`}}",
            "ssh_wait_timeout": "{{user `ssh_timeout`}}"
        }
    ],

    "provisioners": [
        {
            "type": "file",
            "source": "../cmdlet",
            "destination": "/tmp"
        },

        {
            "type": "shell",
            "inline": [
                "chmod a+x /tmp/cmdlet/*.sh",
                "sudo cp -pr /tmp/cmdlet/*.sh /usr/local/bin"
            ]
        },

        {
            "environment_vars": [
                "DNF_MIRROR_PATH={{user `dnf_mirror_path`}}",
                "DNF_MIRROR_SERVER={{user `dnf_mirror_server`}}",
                "SSH_USERNAME={{user `ssh_username`}}",
                "SSH_PASSWORD={{user `ssh_password`}}",
                "VM_NAME={{user `fedora_name`}}-{{ user `vm_name` }}",
                "YUM_PROXY={{user `yum_proxy`}}",
                "http_proxy={{user `http_proxy`}}",
                "https_proxy={{user `https_proxy`}}",
                "no_proxy={{user `no_proxy`}}"
            ], 
            "execute_command": "echo '{{ user `ssh_password` }}' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
            "scripts": [
                "../custom/disable-cloud-init.sh",
                "../custom/install-vagrant-key.sh",
                "../custom/setup-sudoers.sh",
                "../custom/clean-proxy.sh",
                "../custom/setup-proxy.sh",
                "../custom/setup-repos.sh",
                "../custom/fedora/install-common.sh",
                "../custom/fedora/install-libvirt.sh",
                "../custom/clean-proxy.sh",
                "../custom/motd.sh",
                "../custom/fedora/cleanup.sh"
            ],
            "type": "shell"
        }
    ],

    "post-processors": [
        {
            "environment_vars": [
                "IMAGENAME={{user `fedora_name`}}-{{ user `vm_name` }}",
                "OUTPUT=../qemu/{{ user `fedora_name` }}-{{ user `vm_name` }}",
                "DEST=../image/{{ user `fedora_name` }}",
                "SPARSIFY={{ user `sparsify` }}",
                "VERSION={{ user `version` }}"
            ],
            "type": "shell-local",
            "only": [
                "qemu"
            ],
            "scripts": [
                "../post/backup-disk.sh"
            ]
        },

        {
            "keep_input_artifact": false,
            "output": "../box/{{ user `fedora_name` }}/{{user `fedora_name`}}-{{ user `vm_name` }}-{{.Provider}}-{{user `version`}}.box",
            "type": "vagrant",
            "vagrantfile_template": "{{ user `vagrantfile_template` }}"
        }
    ],

    "variables": {
        "cpus": "2",
        "disk_size": "16384",
        "dnf_mirror_path":"",
        "dnf_mirror_server":"",
        "fedora_name": "",
        "headless": "true",
        "http_proxy": "{{env `http_proxy`}}",
        "https_proxy": "{{env `https_proxy`}}",
        "install_vagrant_key": "true",
        "iso_checksum": "",
        "iso_checksum_type": "sha256",
        "iso_name": "",
        "iso_path": "",
        "iso_url": "",
        "memory": "4096",
        "no_proxy": "{{env `no_proxy`}}",
        "sparsify": "true",
        "ssh_password": "vagrant",
        "ssh_username": "vagrant",
        "ssh_timeout": "15m",
        "version": "{{isotime \"20060102\"}}",
        "vm_name": "minikube",
        "yum_proxy":""
    }
}
